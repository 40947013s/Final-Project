{
    "tasks": [
        
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/*.c",
                "-o",
                "${workspaceFolder}/main.out"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "close": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Close term",
            "type": "shell",
            "command": "killall -SIGTERM Terminal"
        }
    ],
    
    "version": "2.0.0"
}